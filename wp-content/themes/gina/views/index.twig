{% extends "base.twig" %}

{% block content %}
<div class="c-blog">
	<div class="o-layout-container">

		<h4>Tags</h4>
		{% for tag in tags %}
			<div filterType="tag" class="js-tag-click js-content-filter">{{tag.name}}</div>
		{% endfor %}

		<h4>Cats</h4>
		{% for cat in categories %}
			<div filterType="cat" class="js-cat-click js-content-filter">{{cat.name}}</div>
		{% endfor %}

		{% for post in posts %}

		{% endfor %}
		{% for post in posts %}

		{% endfor %}
		{% if title %}
			<h1 class="c-blog__title">{{title}}</h1>
		{% else %}
			<h1 class="c-blog__title">News</h1>
		{% endif %}

		{% include 'sidebar.twig' %}

		<div class="c-blog__wrapper">

		<!-- Loop through ACF fields -->
		{% for post in posts %}
			{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
		{% endfor %}

		{# prev link #}
		{% if pagination.prev %}
         <a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
     {% endif %}

		{# next link #}
		{% if pagination.next %}
			<a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
		{% endif %}

	</div>
	</div>
</div>
{% endblock %}
